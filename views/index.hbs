                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" name="email" class="validate white-text">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="password" name="password" class="validate white-text">
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="row center">
                            <div class="col s12">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Log In With FB</button>
                                <button class="btn waves-effect orange waves-light" type="submit" name="login">Log In</button>
                                <button class="btn waves-effect light-green waves-light" type="submit" name="signup">Sign Up!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="container ">
                <div class="row center white-text ">
